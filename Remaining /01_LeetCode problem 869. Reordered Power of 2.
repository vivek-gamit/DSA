#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    bool reorderedPowerOf2(int n) {
        string sorted_n = sortDigits(n);
        
        for (int i = 0; i < 31; i++) { // 2^0 to 2^30 fits in <= 10^9
            int power = 1 << i;
            if (sortDigits(power) == sorted_n)
                return true;
        }
        return false;
    }
    
    string sortDigits(int num) {
        string s = to_string(num);
        sort(s.begin(), s.end());
        return s;
    }
};

int main() {
    Solution sol;
    cout << boolalpha << sol.reorderedPowerOf2(1) << endl;  // true
    cout << boolalpha << sol.reorderedPowerOf2(10) << endl; // false
}
