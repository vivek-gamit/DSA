class Solution {
public:
    string largestGoodInteger(string num) {
        string ans = "";

        for(int i=0; i<=(int)num.size()-3; i++){
            string sub = num.substr(i, 3);
            if(sub[0] == sub[1] && sub[1] == sub[2]){
                if(ans.empty() || sub > ans){
                    ans = sub;
                }
            }
        }

        return ans;

    }
};
